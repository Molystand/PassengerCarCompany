<Window x:Class="PassengerCarCompany.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PassengerCarCompany"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="300"
        Loaded="Window_Loaded">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="10"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Name="btnBusTable" Content="Таблица Bus" Click="btnBusTable_Click"/>
        <Button Name="btnBusStopTable" Content="Таблица BusStop" Click="btnBusStopTable_Click"
                Grid.Row="1"/>
        <Button Name="btnDriverTable" Content="Таблица Driver" Click="btnDriverTable_Click"
                Grid.Row="2"/>
        <Button Name="btnRouteTable" Content="Таблица Route" Click="btnRouteTable_Click"
                Grid.Row="3"/>
        <Button Name="btnRouteSheetTable" Content="Таблица RouteSheet" Click="btnRouteSheetTable_Click"
                Grid.Row="4"/>
        <Button Name="btnStopsOnTheRouteTable" Content="Таблица StopsOnTheRoute" Click="btnStopsOnTheRouteTable_Click"
                Grid.Row="5"/>
    </Grid>
</Window>
